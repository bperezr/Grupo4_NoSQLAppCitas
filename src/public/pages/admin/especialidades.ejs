<div class="content">
    <div class="content__title">
        <h1>Especialidades</h1>
    </div>

    <section class="main__container">
        <div class="container__header">
            <div class="btn-agregar-wrapper">
                <button onclick="abrirModal()" class="btn__agregar-nueva">
                    <i class="fa-solid fa-plus"></i> Agregar nueva especialidad
                </button>
            </div>
        </div>

        <div class="table-container">
            <table id="tablaEspecialidades" class="display compact nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio de consulta</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% especialidades.forEach(esp => { %>
                        <tr>
                            <td><%= esp.nombreEspecialidad %></td>
                            <td><%= esp.descripcion %></td>
                            <td>₡<%= esp.precioConsulta.toFixed(2) %></td>
                            <td class="text-center">
                                <button class="btn__icon" title="Editar" data-especialidad='<%- JSON.stringify(esp) %>'
                                    onclick="cargarEspecialidadDesdeAtributo(this)">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                                <button class="btn__icon eliminar-btn" data-id="<%= esp._id %>" title="Eliminar">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</div>

<!-- Modal Agregar -->
<div id="modalEspecialidad" class="modal">
    <div class="modal__content">
        <span class="modal__close" onclick="cerrarModal()">&times;</span>
        <h2>Agregar nueva especialidad</h2>
        <form action="/admin/especialidades" method="POST" class="modal__form">
            <input type="text" name="nombreEspecialidad" placeholder="Nombre de la especialidad" required>
            <input type="text" name="descripcion" placeholder="Descripción">
            <input type="number" step="0.01" name="precioConsulta" placeholder="Precio de consulta" required>
            <button type="submit" class="btn__agregar-nueva">Guardar</button>
        </form>
    </div>
</div>

<!-- Modal Editar -->
<div id="modalEditarEspecialidad" class="modal">
    <div class="modal__content">
        <span class="modal__close" onclick="cerrarModalEditar()">&times;</span>
        <h2>Editar especialidad</h2>
        <form id="formEditarEspecialidad" method="POST" class="modal__form">
            <input type="text" name="nombreEspecialidad" id="editarNombre" placeholder="Nombre" required>
            <input type="text" name="descripcion" id="editarDescripcion" placeholder="Descripción">
            <input type="number" step="0.01" name="precioConsulta" id="editarPrecio" placeholder="Precio de consulta" required>
            <button type="submit" class="btn__agregar-nueva">Guardar cambios</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if ($.fn.DataTable.isDataTable('#tablaEspecialidades')) {
            $('#tablaEspecialidades').DataTable().clear().destroy();
        }

        $('#tablaEspecialidades').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
            },
            responsive: true
        });

        document.querySelectorAll(".eliminar-btn").forEach(boton => {
            boton.addEventListener("click", function () {
                const id = this.dataset.id;

                Swal.fire({
                    title: "¿Estás seguro?",
                    text: "Esta acción no se puede deshacer.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sí, eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = `/admin/especialidades/eliminar/${id}`;
                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });

        const formEditar = document.getElementById('formEditarEspecialidad');
        if (formEditar) {
            formEditar.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: '¿Guardar cambios?',
                    text: "Se actualizará la información de la especialidad.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, guardar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        formEditar.submit();
                    }
                });
            });
        }

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('editado') === '1') {
            Swal.fire({
                icon: 'success',
                title: '¡Especialidad actualizada!',
                showConfirmButton: false,
                timer: 2000
            });
            const url = new URL(window.location);
            url.searchParams.delete('editado');
            window.history.replaceState({}, document.title, url);
        }
    });

    // Modal agregar
    function abrirModal() {
        document.getElementById("modalEspecialidad").style.display = "block";
    }

    function cerrarModal() {
        document.getElementById("modalEspecialidad").style.display = "none";
    }

    // Modal editar
    function cargarEspecialidadDesdeAtributo(btn) {
        const esp = JSON.parse(btn.getAttribute('data-especialidad'));
        abrirModalEditar(esp);
    }

    function abrirModalEditar(esp) {
        document.getElementById("editarNombre").value = esp.nombreEspecialidad;
        document.getElementById("editarDescripcion").value = esp.descripcion;
        document.getElementById("editarPrecio").value = esp.precioConsulta;

        const form = document.getElementById("formEditarEspecialidad");
        form.action = `/admin/especialidades/editar/${esp._id}`;

        document.getElementById("modalEditarEspecialidad").style.display = "block";
    }

    function cerrarModalEditar() {
        document.getElementById("modalEditarEspecialidad").style.display = "none";
    }

    window.onclick = function (event) {
        const modalAgregar = document.getElementById("modalEspecialidad");
        const modalEditar = document.getElementById("modalEditarEspecialidad");

        if (event.target === modalAgregar) {
            cerrarModal();
        }

        if (event.target === modalEditar) {
            cerrarModalEditar();
        }
    }
</script>