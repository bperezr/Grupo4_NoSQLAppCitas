</div>

<!-- Modal para atender receta -->
<div id="modalAtenderReceta" class="modal">
    <div class="modal__content modal__content--detalles">
        <span class="modal__close" onclick="cerrarModalAtencion()">&times;</span>
        <h2 class="modal__title">üßæ Atender Receta M√©dica</h2>

        <div class="modal__info">
            <!-- Info Paciente -->
            <section class="detalle__seccion">
                <h3 class="detalle__titulo">üßç Paciente</h3>
                <p><strong>Nombre:</strong> <span id="atencionPacienteNombre"></span></p>
                <p><strong>C√©dula:</strong> <span id="atencionPacienteCedula"></span></p>
                <p><strong>Email:</strong> <span id="atencionPacienteEmail"></span></p>
                <p><strong>Tel√©fono:</strong> <span id="atencionPacienteTelefono"></span></p>
            </section>

            <!-- Medicamentos Detallados -->
            <section class="detalle__seccion">
                <h3 class="detalle__titulo">üíä Medicamentos Recetados</h3>
                <table class="table table--striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Marca</th>
                            <th>Tipo</th>
                            <th>Unidad</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    <tbody id="tablaAtencionMedicamentos">
                        <!-- Se cargan con JS -->
                    </tbody>
                </table>
            </section>

            <!-- Nota del Doctor -->
